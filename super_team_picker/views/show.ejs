<%- include('partials/header.ejs') %> 
<div> 
    <div>
     <img
        src="<%= cohort.logoUrl %>"
        alt=""
        style="width: 100px ;height: 100px; border-radius: 100%"
      />
    <h1><%= cohort.name %></h1>
    <p> <%= cohort.members %></p>
    </div>

    <div class="d-flex">
            <a href="/Cohorts/<%= cohort.id %>/edit" class="btn btn-outline-success mr-2">
                Edit
            </a>
        </div>
        <form method="POST" action="/cohorts/<%= cohort.id %>" >
            <input type="hidden" name="_method" value="DELETE" />
            <input type="submit" class="btn btn-outline-danger" value= "DELETE" >
        </form>
    </div>

    <% if (method) { %>
        <div>selected method: <%= method %></div>
    <% } %>
<form action="/cohorts/<%=cohort.id%>" method="POST">
    <input type="radio" name="method" value = "team_count" <%= method === 'team_count' ? 'checked' : '' %> id = "cohortCount" >cohort Count</input>
    <input type="radio" name="method" value = "per_team" <%= method === 'per_team' ? 'checked' : '' %> id = "NumberPercohort"> Number Per cohort </input>

    <p>Quantity</p>
    <input type="text" name="count" id="count" placeholder="Integers Only Please" value="<%= count %>" />
    <input type="submit" value="Assign cohorts" />
</form>

<% teams.forEach((team, i) => { %>
    <div class="col-md-2">
    <h2><%= i + 1 %></h2>
    <% team.forEach((member) => { %>
        <%= member %><br>
    <% }) %>
    </div>
<% }) %>
<%- include('partials/footer.ejs') %> 